<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>회원 정보</title>

    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>회원 정보</h1>
    <a href="/">HOME</a>
    <p>ID 수정 불가능, Password, Name 수정 가능</p>

    <form name="form_profile">
      <label for="userid">ID</label>
      <input type="hidden" id="id" value="<%= data.id %>" />
      <!-- readonly: userid는 수정 불가능 (조건임) -->
      <input
        id="userid"
        type="text"
        name="userid"
        value="<%= data.userid %>"
        readonly
      /><br />
      <label for="password">Password</label>
      <input
        id="password"
        type="password"
        name="pw"
        value="<%= data.pw %>"
        required
        maxlength="20"
      /><br />
      <label for="name">Name</label>
      <input
        id="name"
        type="text"
        name="name"
        value="<%= data.name %>"
        required
        maxlength="10"
      /><br />
      <button type="button" onclick="profileEdit();">Edit</button>
      <button type="button" onclick="profileDelete();">Delete</button>
    </form>

    <script>
      async function profileEdit() {
        const form = document.forms["form_profile"];

        if (!form.checkValidity()) {
          console.log("check");
          form.reportValidity(); // 유저에게 validity 알려줌
          return;
        }

        const { data } = await axios({
          method: "PATCH",
          url: "/user/profile/edit",
          data: {
            id: form.id.value,
            userid: form.userid.value,
            pw: form.pw.value,
            name: form.name.value,
          },
        });
        console.log(data);
        alert("수정 성공!");
      }

      async function profileDelete() {
        const form = document.forms["form_profile"];

        if (!form.checkValidity()) {
          console.log("check");
          form.reportValidity(); // 유저에게 validity 알려줌
          return;
        }

        const { data } = await axios({
          method: "DELETE",
          url: "/user/profile/delete",
          data: {
            id: form.id.value,
          },
        });
        console.log(data);
        alert("회원 탈퇴 성공!");
        // 탈퇴 했으면 프로필 페이지 X -> 메인 페이지로 이동
        document.location.href = "/";
      }
    </script>
  </body>
</html>
